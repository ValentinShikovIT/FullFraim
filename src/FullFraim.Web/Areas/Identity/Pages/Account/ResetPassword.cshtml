@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<link rel="stylesheet" href="~/css/Identity/Login.css" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <form method="post">
            <div class="fadeIn first" style="margin-top: 1rem;">
                <h5 style="display: inline-block">@ViewData["Title"]</h5>
            </div>
            <hr />
            <input asp-for="Input.Code" type="hidden" />
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control fadeIn second" placeholder="e.g. IvanPertov@gmail.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control fadeIn second" placeholder="******" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control fadeIn second" placeholder="******" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-sm btn-outline-primary fadeIn fourth" style="margin-bottom:1rem;">Reset</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
