@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<link rel="stylesheet" href="~/css/Identity/Login.css" />

<div class="wrapper fadeInDown">
    <div id="formContent">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="fadeIn first" style="margin-top: 1rem;">
                <h5 style="display: inline-block">Create a new account</h5>
            </div>
            <hr />
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control fadeIn second" placeholder="e.g. IvanPertov@gmail.com"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control fadeIn second" placeholder="e.g. Ivan"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control fadeIn second" placeholder="e.g. Pertov"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control fadeIn second" placeholder="******"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control fadeIn second" placeholder="******"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn-sm btn-outline-primary fadeIn fourth">Register</button>
        </form>

        <div class="form-group formFooter">
            <p>
                <a class="underlineHover" id="forgot-password" asp-page="./Login">Login</a>
            </p>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
