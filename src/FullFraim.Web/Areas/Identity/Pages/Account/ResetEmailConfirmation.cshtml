@page
@model ResetEmailConfirmationModel
@{
    ViewData["Title"] = "Reset email confirmation";
}

<link rel="stylesheet" href="~/css/Identity/Login.css" />
<div class="wrapper fadeInDown">

    <form method="post">
        <div class="fadeIn first" style="margin-top: 1rem;">
            <h5 style="display: inline-block">@ViewData["Title"]</h5>
        </div>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control fadeIn first" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-sm btn-outline-primary fadeIn fourth">Send Token</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
