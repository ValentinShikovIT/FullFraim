@model PaginatedModel<ContestSubmissionOutputDto>
@{
    var score = $"{Model.Model.FirstOrDefault().Score:f2}";
}
<link rel="stylesheet" href="~/css/Identity/Login.css" />
<link href="~/lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div style="margin: 15vh 0rem 0rem 0rem">
    <div class="wrapper fadeInDown">
        <div id="formContent" style="max-width: 60rem !important">
            <div style="margin-top:3rem;">
                <img class="card-img-top" src="@Model.Model.FirstOrDefault().PhotoUrl" alt="Card image cap" style="width: 95%; border-radius: 15px;" />
                <p>Author: <i>@Model.Model.FirstOrDefault().AuthorName</i></p>
                <p><q><i>@Model.Model.FirstOrDefault().Description</i></q></p>
            </div>
            <div class="fadeIn first" style="margin-top: 1rem;">
                <h6>
                    Final score: <span style="color: gray">
                        <svg xmlns="http://www.w3.org/2000/svg" width="12" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                            <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z" />
                        </svg>
                        @score / 10
                    </span>
                </h6>
            </div>
            <hr />
            <div style="overflow-y:scroll; max-height: 27rem;">
                @foreach (var review in Model.Model)
                {
                    @foreach (var Review in review.Reviews)
                    {
                        <div>
                            <p>Review by: <i>@Review.AuthorName</i></p>
                            <div class="form-group">
                                <label asp-for="@Review.Comment"></label>
                                <div>
                                    <p class="fadeIn second"><q>@Review.Comment</q></p>
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="slidecontainer">
                                    <h7>
                                        Score: <span style="color:gray;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="12" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                                                <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z" />
                                            </svg>
                                            @Review.Score
                                        </span>
                                    </h7>
                                </div>
                            </div>
                        </div>
                        <hr />
                    }
                }
            </div>
        </div>
    </div>
</div>