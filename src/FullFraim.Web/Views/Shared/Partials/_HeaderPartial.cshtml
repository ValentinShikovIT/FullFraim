@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager

<style>
    .outlineText {
        color: #28bdaa !important;
        font-size: 1rem !important;
        font-weight: bold;
    }
</style>

<header class="header-area">
    <div class="container-fluid h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12 h-100">
                <div class="main-menu h-100">
                    <nav class="navbar h-100 navbar-expand-lg">
                        <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                            <div>
                                <svg xmlns="http://www.w3.org/2000/svg" width="4rem" height="4rem" fill="currentColor" class="bi bi-camera2" viewBox="0 0 16 16" style="color: white; margin-bottom: -1vh;">
                                    <path d="M5 8c0-1.657 2.343-3 4-3V4a4 4 0 0 0-4 4z" />
                                    <path d="M12.318 3h2.015C15.253 3 16 3.746 16 4.667v6.666c0 .92-.746 1.667-1.667 1.667h-2.015A5.97 5.97 0 0 1 9 14a5.972 5.972 0 0 1-3.318-1H1.667C.747 13 0 12.254 0 11.333V4.667C0 3.747.746 3 1.667 3H2a1 1 0 0 1 1-1h1a1 1 0 0 1 1 1h.682A5.97 5.97 0 0 1 9 2c1.227 0 2.367.368 3.318 1zM2 4.5a.5.5 0 1 0-1 0 .5.5 0 0 0 1 0zM14 8A5 5 0 1 0 4 8a5 5 0 0 0 10 0z" />
                                </svg>
                                <div style="color: white;">
                                    fullfr<span style=" color: #28bdaa; font-weight: bold;">aim</span>
                                </div>
                            </div>
                        </a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#studioMenu" aria-controls="studioMenu" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars"></i> Menu</button>

                        <div class="collapse navbar-collapse" id="studioMenu">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item active">
                                    <a class="nav-link outlineText" asp-action="Index" asp-controller="Home">Home <span class="sr-only">(current)</span></a>
                                </li>
                                @if (SignInManager.IsSignedIn(User))
                                {

                                    <li class="nav-item">
                                        <a class="nav-link outlineText" asp-controller="Dashboard" asp-action="Index">dashboard</a>
                                    </li>

                                }
                                @if (User.IsInRole(Constants.Roles.Organizer))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link outlineText" asp-controller="User" asp-action="Index">Users</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link outlineText" asp-controller="Contest" asp-action="Create">Create Contest</a>
                                    </li>
                                }
                                <partial name="~/Views/Shared/Partials/_LoginPartial.cshtml">
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</header>